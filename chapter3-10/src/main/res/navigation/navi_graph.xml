<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navi_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.chapter3_10.HomeFragment"
        tools:layout="@layout/fragment_home"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_writeArticleFragment"
            app:destination="@id/writeArticleFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.chapter3_10.AuthFragment"
        tools:layout="@layout/fragment_auth"
        android:label="AuthFragment" >
    </fragment>
    <fragment
        android:id="@+id/writeArticleFragment"
        android:name="com.example.chapter3_10.ui.article.WriteArticleFragment"
        android:label="WriteArticleFragment"
        tools:layout="@layout/fragment_write">
        <action
            android:id="@+id/action_writeArticleFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/actionBack"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>